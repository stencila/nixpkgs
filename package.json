{
  "name": "@stencila/nixster",
  "version": "18.12.0",
  "description": "A package manager and distribution based on Nix",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nixster": "./dist/cli.js"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json --fix --format stylish ./src/**/*.ts",
    "test": "jest",
    "cover": "jest --collectCoverage",
    "build": "npm run build:dist && npm run build:bins",
    "build:dist": "tsc && cp -TRv src/static/ dist/static/",
    "build:bins": "tar czf node_modules.tar.gz node_modules/better-sqlite3 node_modules/integer node_modules/node-pty && pkg --target=node10 --out-path=build .",
    "contributors:add": "all-contributors add",
    "docs": "markdown-toc -i --maxdepth=4 README.md && typedoc --readme README.md --mode file --out ./docs ./src",
    "serve:dev": "ts-node src/serve.ts",
    "serve:prod": "node dist/serve.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/nixster.git"
  },
  "keywords": [
    "Nix",
    "reproducible",
    "environments",
    "package",
    "manager"
  ],
  "author": "Nixster contributors (https://github.com/stencila/nixster/contributors)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/nixster/issues"
  },
  "homepage": "https://github.com/stencila/nixster#readme",
  "devDependencies": {
    "@types/better-sqlite3": "^5.2.1",
    "@types/del": "^3.0.1",
    "@types/express": "^4.16.0",
    "@types/express-ws": "^3.0.0",
    "@types/jest": "^23.3.12",
    "@types/js-yaml": "^3.11.4",
    "@types/mkdirp": "^0.5.2",
    "@types/sprintf-js": "^1.1.1",
    "@types/stream-to-promise": "^2.2.0",
    "@types/tar": "^4.0.0",
    "@types/tmp": "0.0.33",
    "@types/yargs": "^12.0.5",
    "all-contributors-cli": "^5.7.0",
    "jest": "^23.6.0",
    "markdown-toc": "^1.2.0",
    "pkg": "^4.3.7",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "await-spawn": "^2.1.2",
    "better-sqlite3": "^5.2.1",
    "chalk": "^2.4.2",
    "del": "^3.0.0",
    "ellipsize": "^0.1.0",
    "express": "^4.16.4",
    "express-async-handler": "^1.1.4",
    "express-ws": "^4.0.0",
    "glob": "^7.1.3",
    "js-yaml": "^3.12.1",
    "mkdirp": "^0.5.1",
    "node-pty": "^0.8.0",
    "remove": "^0.1.5",
    "sprintf-js": "^1.1.2",
    "tar": "^4.4.8",
    "tmp": "0.0.33",
    "yargs": "^12.0.5"
  },
  "pkg": {
    "assets": [
      "./envs/**/*",
      "./dist/static/**/*",
      "./node_modules.tar.gz"
    ]
  }
}
